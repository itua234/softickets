<%- include("layout/header.ejs") %>
        <section class="" style="margin-top:80px">
            <div class="container">
                <div class="row">
                    <%- include("layout/sidebar.ejs") %>
                    <div class="col-xl-9 col-lg-9 col-md-8 pb-4">
                        <div class="" id="ticket-box">
                            <% events.forEach(event => { %>
    <% const dateString = event.date; %>
    <% const date = new Date(dateString); %>
    <% const formattedDate = `${date.getFullYear()}-${(date.getMonth() + 1).toString().padStart(2, '0')}-${date.getDate().toString().padStart(2, '0')} ${date.getHours().toString().padStart(2, '0')}:${date.getMinutes().toString().padStart(2, '0')}`; %>
                                <div class="mt-3 p-2" style="border:2px solid gray">
                                    <div class="d-flex justify-content-between">
                                        <div class="d-flex">
                                            <img src="<%= event.image %>" style="width:100px;height:70px;margin-right:10px" />
                                            <div class="">
                                                <h6><%= event.title %></h6>
                                                <p><%= event.description %></p>
                                                <p><%= formattedDate %></p>
                                            </div>
                                        </div>
                                        <img src="/assets/images/icons/upload.svg" />
                                    </div>
                                    <div class="d-flex flex-sm-column flex-md-row justify-content-between mt-2">
                                        <div class="d-flex align-items-center">
                                            <div class="d-flex align-items-center justify-content-center mr-2 ticket-round">
                                                <img src="/assets/images/icons/upload.svg" />
                                            </div>
                                            <div class="d-flex flex-column">
                                                <span>Status</span>
                                                <span>Active</span>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <div class="d-flex align-items-center justify-content-center mr-2 ticket-round">
                                                <img src="/assets/images/icons/upload.svg" />
                                            </div>
                                            <div class="d-flex flex-column">
                                                <span>Event Views</span>
                                                <span>2</span>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <div class="d-flex align-items-center justify-content-center mr-2 ticket-round">
                                                <img src="/assets/images/icons/upload.svg" />
                                            </div>
                                            <div class="d-flex flex-column">
                                                <span>Ticket Sold</span>
                                                <span>2</span>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <div class="d-flex align-items-center justify-content-center mr-2 ticket-round">
                                                <img src="/assets/images/icons/upload.svg" />
                                            </div>
                                            <div class="d-flex flex-column">
                                                <span>Ticketing Password</span>
                                                <span>7vv8r0t</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>            
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
        <script src="/assets/libs/jquery/dist/jquery.min.js"></script>
        <script src="/assets/js/user-sidebar.js"></script>
        <script src="/assets/js/slim.min.js"></script>
        <script src="/assets/js/popper.min.js"></script>
        <script src="/assets/js/bootstrap.min.js"></script>
        <script src="/assets/libs/axios/axios.js"></script>
        <script>
            flatpickr('#date', {
                enableTime: true,
                dateFormat: "Y-m-d H:i"
            });

            
        </script>
    </body>
</html>